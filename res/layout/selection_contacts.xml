<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent">

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/labelFollowers"
              android:id="@+id/labelFollowers"
            />
    <ListView android:layout_width="fill_parent"
              android:layout_height="300dip"
              android:id="@+id/lv_Follower"
              android:layout_below="@id/labelFollowers"
            />

    <TextView android:layout_width="wrap_content"
              android:layout_height="wrap_content"
              android:text="@string/labelPendingFollowers"
              android:id="@+id/labelPendingFollowers"
              android:layout_below="@id/lv_Follower"
            />
    <ListView android:layout_width="fill_parent"
              android:layout_height="300dip"
              android:id="@+id/lv_PendingFollower"
              android:layout_below="@id/labelPendingFollowers"
            />

    <TextView
            android:layout_centerVertical="true"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/instructionContactListAccess"
            android:id="@+id/v_input"
            />
    <EditText
            android:inputType="phone"
            android:layout_width="130pt"
            android:layout_height="wrap_content"
            android:id="@+id/n_input"
            android:layout_below="@id/v_input"
            />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/contactListAccess"
            android:layout_toRightOf="@id/n_input"
            android:layout_below="@id/v_input"
            android:onClick="openContactList"
            />


    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:text="@string/b_suivant"
            android:onClick="openMap"
            />
</RelativeLayout>